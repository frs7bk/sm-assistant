
# ===================================
# إعدادات المساعد الذكي الموحد
# ===================================

# مفاتيح الذكاء الاصطناعي
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///data/assistant.db
REDIS_URL=redis://localhost:6379
MONGODB_URI=mongodb://localhost:27017/assistant

# الأمان والتشفير
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# إعدادات الشبكة
WEB_PORT=5000
STREAMLIT_PORT=8501
DASH_PORT=8050
HOST=0.0.0.0

# إعدادات التطوير
DEBUG=false
LOG_LEVEL=INFO
LANGUAGE=ar

# إعدادات الصوت
VOICE_LANGUAGE=ar-SA
VOICE_SPEED=150
VOICE_VOLUME=0.9

# إعدادات الرؤية
CAMERA_INDEX=0
DETECTION_CONFIDENCE=0.5
ENABLE_FACE_RECOGNITION=true

# إعدادات التعلم
LEARNING_RATE=0.01
MEMORY_SIZE=1000
ACTIVE_LEARNING_THRESHOLD=0.8

# إعدادات الأداء
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# إعدادات الميزات
ENABLE_VOICE=true
ENABLE_VISION=true
ENABLE_WEB_INTERFACE=true
ENABLE_ANALYTICS=true
ENABLE_LEARNING=true

# إعدادات إضافية
BACKUP_INTERVAL=24
MAX_LOG_SIZE=100MB
CLEANUP_INTERVAL=7
